pipeline {
    agent any

    stages {
        stage('Setup') {
            steps {
                sh '''
                   curl -sL https://deb.nodesource.com/setup_18.x | bash -
                   apt-get install -y nodejs
                '''
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
    }
}