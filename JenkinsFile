pipeline {
    agent any

    docker {
        image 'node:20' // Use the desired Node.js version
    }

    stages {
        stage('Setup') {
            steps {
                sh '''
                   curl -sL https://deb.nodesource.com/setup_14.x | sudo -E bash -
                   sudo apt-get install -y nodejs
                '''
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
    }
}